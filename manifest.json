{
  "manifest_version": 3,
  "name": "Full Page Screenshot",
  "version": "1.0",
  "description": "Captures a full page screenshot by scrolling and stitching.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Capture Full Page"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}